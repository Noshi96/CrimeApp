<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/search_view_advanced"
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_view_height"
        android:layout_marginStart="@dimen/search_view_margin"
        android:layout_marginTop="@dimen/search_view_margin_top"
        android:layout_marginEnd="@dimen/search_view_margin"
        android:background="@drawable/bg_white_rounded"
        android:elevation="@dimen/elevation_value"
        app:iconifiedByDefault="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:queryHint="Search in list" />

        <HorizontalScrollView
            android:id="@+id/horizontal_scroll_view_advanced"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/horizontal_scroll_view_margin_top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/search_view_advanced">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_advanced"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/search_view_margin"
                app:singleLine="true"
                app:singleSelection="false">

                <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:checked="false"
                    android:text = "Nasze kategorie"
                    android:elevation="@dimen/elevation_chips"
                    android:textColor="@color/black"
                    app:chipBackgroundColor="@color/chip_bg_states"
                    app:chipIconVisible="true" />

            </com.google.android.material.chip.ChipGroup>

        </HorizontalScrollView>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edit_text_date_from"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start_16"
            android:layout_marginEnd="@dimen/edit_text_margin_top"
            android:hint="Date to"
            app:counterEnabled="true"
            app:counterMaxLength="7"
            app:layout_constraintEnd_toStartOf="@+id/edit_text_date_to"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/horizontal_scroll_view_advanced">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            android:inputType="date"
            android:maxLength="7"
            android:text="2021/07" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edit_text_date_to"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start_16"
            android:layout_marginEnd="@dimen/edit_text_margin_top"
            android:hint="Date to"
            app:counterEnabled="true"
            app:counterMaxLength="7"
            app:layout_constraintEnd_toStartOf="@+id/checkbox_up_to_date"
            app:layout_constraintStart_toEndOf="@+id/edit_text_date_from"
            app:layout_constraintTop_toBottomOf="@+id/horizontal_scroll_view_advanced">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:importantForAutofill="no"
                android:inputType="date"
                android:maxLength="7"
                android:text="2021/09" />
        </com.google.android.material.textfield.TextInputLayout>

        <CheckBox
            android:id="@+id/checkbox_up_to_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:layout_marginEnd="16dp"
            android:text="Up-To-Date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/edit_text_date_to"
            app:layout_constraintTop_toBottomOf="@+id/horizontal_scroll_view_advanced"
            />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#3AAAAAAA"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_date_to" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_advanced_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_marginHorizontal="@dimen/margin_start_16"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_text_date_to" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>